---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";
---

<Layout title="My Website">
  <main class="flex min-h-screen flex-col items-center justify-center p-8">
    <div class="text-center space-y-6 max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
        Hello, World!
      </h1>
      <p class="text-lg text-muted-foreground">
        Your website is ready. Start building something amazing!
      </p>
      <div class="flex gap-4 justify-center">
        <Button>Get Started</Button>
        <Button variant="outline">Learn More</Button>
      </div>
      <p class="text-sm text-muted-foreground pt-8">
        Built with Astro + Tailwind CSS + shadcn/ui
      </p>
    </div>
  </main>
</Layout>
