---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { CreateProjectPrompt } from "@/components/create-project-prompt";
import { ProjectList } from "@/components/project-list";
---

<BaseLayout title="Dashboard">
  <div class="min-h-screen bg-background">
    <main class="container mx-auto px-4 min-h-[calc(100vh-3.5rem)] flex flex-col">
      <!-- Hero section with subtle gradient -->
      <section class="flex-1 flex flex-col items-center justify-center text-center gap-4 relative">
        <div class="absolute inset-0 bg-gradient-subtle opacity-50 pointer-events-none" />
        <div class="relative z-10 flex flex-col gap-4">
          <h1 class="text-4xl md:text-5xl font-bold text-text-strong">Your next idea starts here</h1>
          <p class="text-text-muted">Use AI to build your next project.</p>
          <CreateProjectPrompt client:load />
        </div>
      </section>
      <!-- Projects section -->
      <section class="py-12">
        <h2 class="mb-4 text-xl font-semibold text-text-strong">Recent Projects</h2>
        <ProjectList client:load />
      </section>
    </main>
  </div>
</BaseLayout>
