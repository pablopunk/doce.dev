---
import { CreateProjectPrompt } from "@/components/create-project-prompt";
import { ProjectList } from "@/components/project-list";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Dashboard">
      <!-- Hero section with subtle gradient -->
      <section class="flex-1 flex flex-col items-center justify-center text-center gap-4 relative pt-4">
        <div class="absolute inset-0 bg-gradient-subtle opacity-50 pointer-events-none" />
        <div class="relative z-10 flex flex-col gap-4">
          <h1 class="text-4xl md:text-5xl font-bold text-strong my-5">Your next idea starts here</h1>
          <CreateProjectPrompt client:load />
        </div>
      </section>
      <!-- Projects section -->
      <section class="pb-12 pt-4">
        <h2 class="mb-4 text-xl font-semibold text-strong">Recent Projects</h2>
        <ProjectList client:load />
      </section>
</BaseLayout>
