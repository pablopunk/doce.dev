---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { CreateProjectPrompt } from "@/components/create-project-prompt";
import { ProjectList } from "@/components/project-list";
---

<BaseLayout title="Dashboard">
  <div class="min-h-screen bg-background">
    <main class="container mx-auto px-4 min-h-[calc(100vh-3.5rem)] flex flex-col">
      <section class="flex-1 flex flex-col items-center justify-center text-center gap-4">
        <h1 class="text-4xl md:text-5xl font-bold">Your next idea starts here</h1>
        <p class="text-muted-foreground">Use AI to build your next project.</p>
        <CreateProjectPrompt client:load />
      </section>
      <section class="py-12">
        <h2 class="mb-4 text-xl font-semibold">Recent Projects</h2>
        <ProjectList client:load />
      </section>
    </main>
  </div>
</BaseLayout>
