---
import "../styles/global.css";
import { CreateProjectPrompt } from "@/components/create-project-prompt";
import { ProjectList } from "@/components/project-list";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard | doce.dev</title>
  </head>
  <body class="bg-background text-foreground">
    <div class="min-h-screen bg-background">
      <main class="container mx-auto px-4 py-12 min-h-screen flex flex-col">
        <section class="flex flex-col items-center text-center gap-4">
          <h1 class="text-4xl md:text-5xl font-bold">What do you want to create?</h1>
          <p class="text-muted-foreground">Start building with a single prompt. No coding needed.</p>
          <CreateProjectPrompt client:load />
        </section>
        <section class="mt-auto pt-12">
          <h2 class="mb-4 text-xl font-semibold">Recent Projects</h2>
          <ProjectList client:load />
        </section>
      </main>
    </div>
  </body>
</html>
