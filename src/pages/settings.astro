---
import { SettingsForm } from "@/components/settings-form";
import { ApiKeysForm } from "@/components/api-keys-form";
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Settings">
  <div class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
      <div class="mb-8">
        <h1 class="text-3xl font-bold">Settings</h1>
        <p class="text-muted-foreground mt-1">Manage your global preferences</p>
      </div>

      <div class="space-y-6">
        <!-- AI Model Settings -->
        <Card>
          <CardHeader>
            <CardTitle>Default AI Model</CardTitle>
            <CardDescription>
              Choose the default AI model for new projects
            </CardDescription>
          </CardHeader>
          <CardContent>
            <SettingsForm client:load />
          </CardContent>
        </Card>

        <!-- API Keys Settings -->
        <Card>
          <CardHeader>
            <CardTitle>API Keys</CardTitle>
            <CardDescription>
              Configure API keys for AI providers. Keys are stored securely in the database.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <ApiKeysForm client:load />
          </CardContent>
        </Card>
      </div>
    </div>
  </div>
</BaseLayout>
