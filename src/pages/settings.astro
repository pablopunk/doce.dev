---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SettingsForm } from "@/components/settings-form";
---

<BaseLayout title="Settings">
  <div class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
      <div class="mb-8">
        <h1 class="text-3xl font-bold">Settings</h1>
        <p class="text-muted-foreground mt-1">Manage your global preferences</p>
      </div>
      
      <div class="space-y-6">
        <!-- AI Model Settings -->
        <div class="relative rounded-lg border border-border bg-card p-6 shadow-elevation overflow-hidden">
          <!-- Top highlight -->
          <div class="absolute inset-x-0 top-0 h-px bg-highlight" />
          
          <div class="mb-4">
            <h2 class="text-xl font-semibold text-text-strong">AI Model</h2>
            <p class="text-sm text-muted-foreground mt-1">
              Choose the default AI model for new projects
            </p>
          </div>
          
          <SettingsForm client:load />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
